---
// Last Call to Action component
interface Props {
  title?: string;
  buttonText?: string;
  buttonLink?: string;
  id?: string;
  class?: string;
}

const {
  title = "¿Estás listo para vivir una experiencia mágica?",
  buttonText = "Cotiza el show en vivo",
  buttonLink = "#contact",
  id,
  class: className,
} = Astro.props;
---

<section
  id={id}
  class={`pb-40 pt-20 md:pb-80 md:pt-80 bg-black text-white ${className || ""}`}
>
  <div class="container mx-auto px-4 text-center">
    <h2
      class="text-4xl md:text-5xl lg:text-6xl font-aglio mb-10 md:mb-12 leading-tight text-white"
    >
      {title}
    </h2>
    <a href={buttonLink} class="button-primary">
      {buttonText}
    </a>
  </div>
</section>
