---
import "../styles/global.css";
import aglioFont from "../assets/fonts/aglio-picasso.otf";

export interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en" class="scroll-smooth no-js">
  <head>
    <meta charset="UTF-8" />
    <meta
      name="description"
      content="Joss the Magician - Official Website. Experience the unbelievable!"
    />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <link
      rel="preload"
      href={aglioFont}
      as="font"
      type="font/otf"
      crossorigin
    />
    <title>{title}</title>
    <script>
      // Remove no-js class when JavaScript is available
      document.documentElement.classList.remove("no-js");
    </script>
  </head>
  <body
    class="bg-primary-0 text-primary-100 min-h-screen flex flex-col antialiased"
  >
    <slot name="navigation" />
    <main class="flex-grow">
      <slot />
    </main>
    <slot name="footer" />
  </body>
</html>
